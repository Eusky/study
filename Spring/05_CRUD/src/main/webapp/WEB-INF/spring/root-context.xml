<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  
  <!-- 
    ref: 다른 스프링 빈을 참조할 때 사용(객체 주입)
    value: 문자, 숫자 등 직접 값을 입력할 때 사용(기본값 주입)
   -->

  <!-- 1. HikariConfig -->
  <bean class="com.zaxxer.hikari.HikariConfig" id="hikariConfig">
    <property name="driverClassName" value="com.mysql.cj.jdbc.Driver" />
    <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/db_mybatis?characterEncoding=UTF-8&amp;serverTimezone=UTC" />
    <property name="username" value="local_home" />
    <property name="password" value="home" />
  </bean>
  
  <!-- 2. HikariDataSource -->
  <bean class="com.zaxxer.hikari.HikariDataSource" id="hikariDataSource">
    <constructor-arg ref="hikariConfig" />
  </bean>
  
  <!-- 3. SqlSessionFactoryBean -->
  <bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactoryBean">
    <property name="dataSource" ref="hikariDataSource" />
    <property name="configLocation" value="classpath:mybatis/config/mybatis-config.xml" />
    <property name="mapperLocations" value="classpath:mybatis/mapper/*.xml" />
  </bean>
  
  <!-- 4. SqlSessionTemplate -->
  <bean class="org.mybatis.spring.SqlSessionTemplate" id="sqlSessionTemplate">
    <constructor-arg ref="sqlSessionFactoryBean" />
  </bean>

</beans>
